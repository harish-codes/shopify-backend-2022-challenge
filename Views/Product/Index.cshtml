@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<h1>Product List</h1>
<div class="col-6">
    <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
        Add New Product
    </a>
    <a asp-controller="Product" asp-action="ExportToCSV" class="btn btn-secondary">
        Export To CSV
    </a>
</div>

<table class="table table-borederd table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Product Name
            </th>
            <th>
                Brand
            </th>
            <th>
                Quantity
            </th>
            <th>
                Price
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%"> 
                    @obj.Id
                </td>
                <td width="30%"> 
                    @obj.Name
                </td>
                <td width="30%"> 
                    @obj.Brand
                </td>
                <td width="30%"> 
                    @obj.Quantity
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller"Productaccesskey asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller"Productaccesskey asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i>Delete</a>
                            
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>