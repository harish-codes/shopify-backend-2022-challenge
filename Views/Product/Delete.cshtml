@model Product

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="Brand">Brand</label>
            <input asp-for="Brand" disabled/>
        </div>
        <div class="mb-3">
            <label asp-for="Quantity">Quantity</label>
            <input type="number" min="1" asp-for="Quantity" disabled/>
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">
            Back to Product List
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
